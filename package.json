{
  "displayName": "Technotherm",
  "name": "homebridge-technotherm",
  "version": "1.0.8",
  "description": "Controls for Technotherm electric radiators.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duggan/homebridge-technotherm.git"
  },
  "bugs": {
